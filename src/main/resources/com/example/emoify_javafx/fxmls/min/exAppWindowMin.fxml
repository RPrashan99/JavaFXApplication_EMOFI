<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.emoify_javafx.controllers.exAppController">
   <children>
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="350.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <!-- Top bar with a label -->
            <HBox alignment="CENTER_LEFT" prefWidth="230.0" style="-fx-background-color: #9877AB;" BorderPane.alignment="CENTER">
               <children>
                  <Label text="All available apps" textFill="WHITE" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </top>
         <center>
            <!-- Scrollable center content area -->
            <ScrollPane fx:id="scrollAppPane" fitToHeight="true" fitToWidth="true" style="-fx-background-color: #F8EEFC;" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <!-- Horizontal button bar at the bottom -->
            <HBox alignment="CENTER_RIGHT" prefHeight="40.0" spacing="10.0" style="-fx-background-color: #9877AB;" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="addBtn" mnemonicParsing="false" onMouseClicked="#handleAddApp" styleClass="registrationBtn" stylesheets="@../../css/stylingMin.css" text="Add app">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button fx:id="applyBtn" mnemonicParsing="false" onMouseClicked="#handleApplyBtn" styleClass="registrationBtn" stylesheets="@../../css/stylingMin.css" text="Apply">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </padding>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
