<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.ComboBox?>
<BorderPane fx:id="rootPane" prefHeight="350.0" prefWidth="350.0" style="-fx-background-color: #F8EEFC; -fx-border-color: #9877AB; -fx-border-width: 1;" stylesheets="@../css/add-apps.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.emoify_javafx.controllers.addAppPopupController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="350.0" spacing="10.0" style="-fx-background-color: #9877AB; -fx-padding: 0 10 0 10;" BorderPane.alignment="CENTER_LEFT">
            <children>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <!-- Placeholder image - replace with a relevant icon -->
                        <Image url="@../icons/appIcon.jpg" />
                    </image>
                </ImageView>
                <Label fx:id="popupTitle" text="Add New Application" textFill="WHITE">
                    <font>
                        <Font name="Berlin Sans FB" size="18.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#handleCloseButton" styleClass="closeBtn" stylesheets="@../css/styling.css">
                    <graphic>
                        <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/close.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" spacing="15.0" style="-fx-background-color: #F8EEFC; -fx-padding: 20;" BorderPane.alignment="CENTER">
            <children>
                <Label prefWidth="400" wrapText="true" text="Type the name then click search button. If location is not detected, browse manually."/>
                <VBox spacing="8.0">
                    <children>
                        <Label styleClass="input-label" text="App Name:" />
                        <HBox alignment="CENTER_LEFT" spacing="8.0">
                            <children>
                                <ComboBox fx:id="appNameField" editable="true" styleClass="app-input" HBox.hgrow="ALWAYS"/>
                                <Button onAction="#searchInstalledApps" styleClass="search-button" text="ðŸ”"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <VBox spacing="8.0">
                    <children>
                        <Label styleClass="input-label" text="App Location:" />
                        <HBox alignment="CENTER_LEFT" spacing="8.0">
                            <children>
                                <TextField fx:id="appPathField" styleClass="app-input" HBox.hgrow="ALWAYS"/>
                                <Button onAction="#browseFile" styleClass="browse-button" text="ðŸ“"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <Button onAction="#saveApp" styleClass="add-app-button" text="Add Application" />
            </children>
        </VBox>
    </center>
</BorderPane>