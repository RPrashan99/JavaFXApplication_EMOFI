<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" prefHeight="60.0" prefWidth="265.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.emoify_javafx.fxmls.ExAppCard">
    <children>
        <HBox alignment="CENTER" prefHeight="60.0" prefWidth="68.0" HBox.hgrow="ALWAYS">
            <children>
                <ImageView fitHeight="37.0" fitWidth="47.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../icons/youtube.png" />
                    </image>
                </ImageView>
            </children>
        </HBox>
        <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
            <children>
                <Label contentDisplay="CENTER" prefHeight="19.0" prefWidth="90.0" text="Youtube">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Label>
                <Label fx:id="ytAvailableLabel" text="Not Available" textFill="#842424">
                    <font>
                        <Font name="Britannic Bold" size="12.0" />
                    </font>
                </Label>
            </children>
        </VBox>
        <JFXToggleButton fx:id="youtubeBtn" ellipsisString="" prefHeight="58.0" prefWidth="11.0" />
    </children>
    <padding>
        <Insets right="10.0" />
    </padding>
</HBox>
